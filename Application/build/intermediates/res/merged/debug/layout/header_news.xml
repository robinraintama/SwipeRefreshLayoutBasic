<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/header"
        android:layout_alignParentStart="false"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@android:drawable/ic_input_get" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:id="@+id/relativeLayout"
        android:background="#FFFFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Minutes Hack:\nHow to work smarter on your smartphone"
            android:id="@+id/tv_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:maxLines="3"
            android:maxLength="100" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Maureen Tjahjadi"
            android:id="@+id/tv_author"
            android:layout_below="@+id/tv_title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Category"
            android:id="@+id/tv_cat"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="#ffff8105"
            android:typeface="monospace"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/tv_author"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="- October 15, 2015"
            android:id="@+id/textView4"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:typeface="monospace"
            android:textColor="@android:color/secondary_text_dark_nodisable"
            android:layout_alignTop="@+id/tv_cat"
            android:layout_toEndOf="@+id/tv_cat"
            android:layout_marginLeft="15dp" />
    </RelativeLayout>
</RelativeLayout><!-- From: file:/Users/Sola_MBP/Github/SwipeRefreshLayoutBasic/Application/src/main/res/layout/header_news.xml -->